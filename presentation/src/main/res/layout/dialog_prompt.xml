<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="24dp"
  android:background="@drawable/shape_btn_primary_white">

  <TextView
    android:id="@+id/tv_dialog_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
      android:textSize="18sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Message"/>
  <TextView
    android:id="@+id/tv_dialog_confirm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="OK"
    android:textColor="@color/font_orange"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_dialog_message"
    android:padding="5dp"/>
  <TextView
    android:id="@+id/tv_dialog_neutral"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:padding="5dp"
    android:textColor="@color/font_orange"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_dialog_message"
    tools:text="OK"/>
  <TextView
    android:id="@+id/tv_dialog_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:padding="5dp"
    android:text="取消"
    app:layout_constraintEnd_toStartOf="@+id/tv_dialog_confirm"
    app:layout_constraintTop_toTopOf="@+id/tv_dialog_confirm"/>
</android.support.constraint.ConstraintLayout>